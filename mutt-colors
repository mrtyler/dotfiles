#mono	body		underline	"[-a-z_0-9.]+@[-a-z_0-9.]+"
#mono	body		bold		"(^| )\\*[-a-z0-9*]+\\*[,.?]?[ \n]"
#mono	body		underline	"(^| )_[-a-z0-9_]+_[,.?]?[ \n]"

